<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:nav="urn:import:uz.javlon.webapp.client.ui.navigation"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:with type="uz.javlon.webapp.client.application.ApplicationResources" field="i18n"/>

    <g:HTMLPanel>

        <g:NotificationMole animationDuration="0" message="loading..." ui:field="mole"></g:NotificationMole>
        <nav:DesktopNavigationBar ui:field="navigationBar"/>

        <b:FluidContainer>
            <g:FlowPanel ui:field="messages"/>
            <b:FluidRow>
                <g:SimplePanel ui:field="contentsPanel"/>
                <b:Column size="2">
                    <nav:DesktopSideNavigationBar ui:field="sideNavigationBar"/>
                </b:Column>
            </b:FluidRow>
        </b:FluidContainer>


        <div id="footer">
            <span class="left">
                <ui:text from="{i18n.webapp_version}"/>
                <span ui:field="currentUserInfo"></span>
            </span>
            <span class="right">
                <ui:text from="{i18n.copyright_year}"/>
                <a href="{i18n.company_url}">
                    <ui:text from="{i18n.company_name}"/>
                </a>
            </span>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
